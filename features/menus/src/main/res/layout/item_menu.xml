<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemMenuIcon"
        android:layout_width="@dimen/icon_item_menus_35dp"
        android:layout_height="@dimen/icon_item_menus_35dp"
        android:contentDescription="@string/images_content_description" />
    <!--app:srcVector="@drawable/ic_menu_viewmodel_gray_24dp"-->
    <TextView
        android:id="@+id/itemMenuTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_1_8dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/itemMenuIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemMenuDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_1_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/itemMenuIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemMenuTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>